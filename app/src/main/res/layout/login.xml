<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_parent_RL_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        android:src="@drawable/oddemoji" />
    <com.flaviofaria.kenburnsview.KenBurnsView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@drawable/friendsgoal" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@drawable/geeelogotransparent" />

            <ImageView
                android:id="@+id/logoo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/geee_logo_name" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logoo"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/anydore"
                    android:letterSpacing="0.08"
                    android:text="@string/app_name"
                    android:textColor="@color/colorAccent"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <RelativeLayout
                    style="@style/MyEdittext1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:id="@+id/login_IV_id"
                        android:layout_width="23dp"
                        android:layout_height="22dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/emailui"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/et_emailUsername"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Email"
                        android:inputType="textNoSuggestions"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/white"
                        android:textSize="14dp" />


                </RelativeLayout>

                <RelativeLayout
                    style="@style/MyEdittext1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/login_IV1_id"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/keyui"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:fontFamily="@font/robotoregular"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/padding_10"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/showpass"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/show" />

                </RelativeLayout>



                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/buttonbackgroundnew"
                        android:paddingLeft="40dp"
                        android:layout_marginTop="25dp"
                        android:paddingRight="40dp"
                        android:text="LOGIN"
                        android:fontFamily="@font/robotoregular"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                <TextView
                    android:id="@+id/forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Forget Password?"
                    android:textColor="@color/textcolor"
                    android:textSize="14dp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/passsmd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:visibility="gone"
                    android:shadowRadius="3"
                    android:text="password"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="visible">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1.5dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/login_OR_id"
                        android:background="@color/viewcolor" />

                    <TextView
                        android:id="@+id/login_OR_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/robotbold"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="OR"
                        android:textColor="@color/fadetextcolor" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1.5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/login_OR_id"
                        android:background="@color/viewcolor" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/btn_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:cardCornerRadius="2dp">

                    <RelativeLayout
                        style="@style/MyEdittext2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="15dp"
                            android:layout_toLeftOf="@id/signup_IV_id"
                            android:padding="2dp"
                            android:src="@drawable/ic_facebook_white"
                            app:tint="@color/textcolor" />

                        <TextView
                            android:id="@+id/signup_IV_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/robotoregular"
                            android:text="Login with Facebook"
                            android:textColor="@color/textcolor"
                            android:textStyle="normal" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/signUp_rlt"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an account?"
                        android:textColor="@color/white"
                        android:layout_marginRight="5dp"
                        android:fontFamily="@font/robotoregular"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIGN UP"
                        android:textColor="@color/textcolor"
                        android:textSize="12dp"
                        android:fontFamily="@font/robotbold"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>
</FrameLayout>
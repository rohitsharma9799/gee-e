<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_layout_wrapper_tool"
    android:layout_width="wrap_content"
    android:layout_height="85dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/relativeLayoutEdit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/background_item"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_view_tool_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_enlarge_eyes"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/text_view_tool_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_tool_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/font"
            android:text="editing"
            android:textColor="@color/white"
            android:textSize="9sp"/>

    </RelativeLayout>


</RelativeLayout>